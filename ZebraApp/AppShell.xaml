<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="ZebraApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZebraApp"
    xmlns:view="clr-namespace:ZebraApp.View"
    FlyoutBehavior="Disabled"
    TabBarIsVisible="True"
    Title="ZebraApp">

    <TabBar>
        <ShellContent
            Title="Domů"
            Icon="list.png"
            Route="MainPage"
            ContentTemplate="{DataTemplate view:MainPage}" />

        <ShellContent Title="Nastavení"
                      Route="SettingsPage"
                      Icon="settings.png"
                      ContentTemplate="{DataTemplate view:SettingsPage}" />
    </TabBar>

</Shell>